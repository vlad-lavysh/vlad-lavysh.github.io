mixin checkbox(type, boxId, title, desc)
  case type
    when 'dropdown'
      div.checkbox-rich
        div.checkbox-rich__item
          input(type='checkbox', id=boxId)
          label(for=boxId)
            div.text
              span.title=title
              span.desc=desc

    when 'buttons'
      span.checkbox-buttons-title дополнительно
      div.checkbox-rich
        each title, index in ['Можно курить', 'Можно с питомцами', 'Можно пригласить гостей (до 10 человек)']
          div.checkbox-rich__item.alone
            input(type='checkbox', id=index)
            label(for=index)
              span=title