mixin input(type, placeholder, label)
  div.input-wrapper
    case type
      when 'email'
        input.input-field(type=type, id=type, placeholder='Email')

      when 'password'
        input.input-field(type=type, id=type, placeholder='Пароль')

      when 'text'
        input.input-field(type=type, id=type, placeholder=placeholder)

      when 'text-with-label'
        div.birth-date-wrapper
          label(for=type)=label
          input.input-field(type=type, id=type, placeholder=placeholder)

      when 'subscribe'
        div.subscribe
          input.input-field(type='email', id=type, placeholder='Email')
          //-input.subscribe__btn(type="submit", value="")
          div.subscribe-btn-wrapper
            <svg viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><line x1="10" y1="5" x2="15.7" y2="10.3" stroke="#BC9CFF" stroke-width="1.5" /><line x1="4" y1="9.9" x2="14.5" y2="9.9" stroke="#BC9CFF" stroke-width="1.5" /><line x1="10" y1="15" x2="15" y2="10" stroke="#BC9CFF" stroke-width="1.5" /></svg>

      when 'datepicker'
        label.date-label(for=type)=placeholder
        input.input-field.date.little(id=type, placeholder='ДД.ММ.ГГГГ')

      when 'datepicker-twin'
        label.date-label(for=type)=placeholder
        input.input-field.date(id=type, placeholder='ДД.ММ.ГГГГ' type="text" data-range="true" class='datepicker-here')
