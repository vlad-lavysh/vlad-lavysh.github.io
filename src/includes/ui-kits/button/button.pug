mixin button(type, btnText, btnType, href)
  case type
    when 'like-btn'
      div.like-container
        div.like-container__heart
        span#likesCount.like-container__number 2

    when 'regular-btn'
      a.regular-btn(class=btnType href=href)=btnText

    when 'buy-btn'
      div.buy-btn-wrapper
        div.arrow_white
          <svg viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><line x1="10" y1="5" x2="15.7" y2="10.3" stroke="#FFF" stroke-width="1.5" /><line x1="4" y1="9.9" x2="14.5" y2="9.9" stroke="#FFF" stroke-width="1.5" /><line x1="10" y1="15" x2="15" y2="10" stroke="#FFF" stroke-width="1.5" /></svg>
        a.regular-btn.btn-buy(href=href)=btnText

    when 'large-btn'
      div.buy-btn-wrapper.null-width
        a.regular-btn.btn-buy.large-btn(href=href)=btnText